\def\cleanup@unit#1\@nil{}
\patchcmd{\pgfmathdivide@}{%
  \pgfmath@x=#1pt\relax
  \pgfmath@y=#2pt\relax
}{%
  \afterassignment\cleanup@unit
  \pgfmath@x=#1pt\relax\@nil
  \afterassignment\cleanup@unit
  \pgfmath@y=#2pt\relax\@nil
}{}{%
  \errmessage{Patching \string\pgfmathdivide@\space failed}%
}
